@page
@using SAAS_Projectplanningtool.Models.Budgetplanning
@using System
@using System.Globalization
@model SAAS_Projectplanningtool.Pages.Projects.RessourcePlanningModel

@{
    ViewData["Title"] = "Ressourcenplanung - " + Model.Project?.ProjectName;
}

<!-- Modals -->
<!-- Choose Planning Modal -->
<!-- Direkt in der Modal-DIV -->
<div class="modal fade" id="choosePlanningModal" data-task-id="" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Was möchten Sie anlegen?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body d-grid gap-3">
                <button id="chooseRessourceBtn" class="btn btn-outline-success btn-lg">
                    <i class="fas fa-users me-2"></i> Ressourcen planen
                </button>
                <button id="chooseHourlyRateGroupBtn" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-sitemap me-2"></i> Stundensatzgruppen planen
                </button>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Speichern</button>
            </div>
        </div>
    </div>
</div>


<!-- Add Ressource Modal --> 
<div class="modal fade" id="addRessourceModal" data-task-id="" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="SaveEmployees">
                <input type="hidden" id="employeeProjectTaskId" name="ProjectTaskId" />
                <div class="modal-header">
                    <h5 class="modal-title">Ressourcenplanung – Einzelpersonen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <!-- Inhalt für Einzelressourcen -->
                    <button type="button" class="btn btn-link text-primary switch-modal"
                            data-switch-target="#addHRGsModal">
                        <i class="fas fa-sitemap me-1"></i> Lieber Stundensatzgruppen planen
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Speichern</button>
                </div>
            </form>
        </div>
    </div>
</div>



<!-- Add HourlyRateGroups Modal -->
<div class="modal fade" id="addHRGsModal" data-task-id="" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="SaveHRGs">
            <input type="hidden" id="hrgProjectTaskId" name="ProjectTaskId" />
                <input type="hidden" asp-for="ProjectTaskId" />
                <div class="modal-header">
                    <h5 class="modal-title">Ressourcenplanung – Stundensatzgruppen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <!-- Inhalt für HRGs -->
                    <button type="button" class="btn btn-link text-success switch-modal"
                            data-switch-target="#addRessourceModal">
                        <i class="fas fa-users me-1"></i> Lieber Einzelressourcen planen
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>




<hr />
<div class="d-flex justify-content-between align-items-center">
    <h6><strong>@Model.Project.ProjectName</strong></h6>
    <a asp-page="/Projects/Scheduling" asp-route-id="@Model.Project.ProjectId">
        <img src="~/edit_icon.png" alt="Dashboard" width="20" height="20" class="justify-content-md-between">
    </a>
</div>
<div class="tree">

    <table class="table table-sm">
        <thead>

            <tr>
                <th>Name</th>
                <th>Start</th>
                <th>Ende</th>
                <th>Dauer (Tage)</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @{
                // Nur die Top-Level-Abschnitte (ParentSectionId == null)
                var topSections = Model.Project.ProjectSections
                .Where(ps => ps.ParentSectionId == null)
                .OrderBy(ps => ps.ProjectSectionName);

                RenderSections(topSections, level: 0);
            }
        </tbody>
    </table>
</div>
@functions {

    private void RenderSections(IEnumerable<SAAS_Projectplanningtool.Models.Budgetplanning.ProjectSection> sections, int level)
    {
        // Falls keine Abschnitte oder null, nichts tun
        if (sections == null || !sections.Any())
            return;

        foreach (var ps in sections)
        {
            // Prüfen, ob dieser Abschnitt Kinder (SubSections) oder Tasks besitzt
            bool hasChildren =
                (ps.SubSections != null && ps.SubSections.Any()) ||
                (ps.ProjectTasks != null && ps.ProjectTasks.Any());

            // Erste Zeile: Sichtbare Zeile mit den Hauptinfos
            <tr>
                <td>
                    @* Wenn es Kinder gibt, dann "Plus"-Symbol anzeigen *@
                    @if (hasChildren)
                    {
                        <span style="cursor:pointer; color:blue; margin-left:@(level * 20)px;"
                        onclick="toggleRow('row-@ps.ProjectSectionId')">
                            +
                        </span>
                    }
                    else
                    {
                        // Falls kein Child, nur "padding" um es einzurücken
                        <span style="display:inline-block; margin-left:@(level * 20)px;"></span>
                    }
                    @ps.ProjectSectionName
                </td>
                @{
                    var allTasks = GetAllTasks(ps);
                    DateOnly? sectionStart = allTasks.Any() ? allTasks.Min(t => t.StartDate) : null;
                    DateOnly? sectionEnd = allTasks.Any() ? allTasks.Max(t => t.EndDate) : null;
                    int? sectionDuration = (sectionStart.HasValue && sectionEnd.HasValue) ? (sectionEnd.Value.DayNumber - sectionStart.Value.DayNumber + 1) : null;
                }
                <td>
                    @(sectionStart.HasValue ? sectionStart.Value.ToString("dd.MM.yyyy") : "Nicht verfügbar")
                </td>
                <td>
                    @(sectionEnd.HasValue ? sectionEnd.Value.ToString("dd.MM.yyyy") : "Nicht verfügbar")
                </td>
                <td>
                    @(sectionDuration.HasValue ? sectionDuration.Value.ToString() : "Nicht verfügbar")
                </td>


                <!-- Status -->
                <td align="right">
                    <div class="statecolorcontainer badge" style="background-color:@ps.State?.Color;">
                        @(ps.State?.StateName ?? "Kein Status")
                    </div>

                </td>
            </tr>

            // Zweite Zeile (versteckt), falls Tasks oder SubSections existieren
            if (hasChildren)
            {
                <tr id="row-@ps.ProjectSectionId" style="display:none">
                    <!-- colspan=4, damit wir in einer Zelle den Inhalt verbreiten -->
                    <td colspan="4" style="background:#f9f9f9; padding-left:@((level + 1) * 20)px;">

                        <!-- 1) Tasks dieses Abschnitts -->
                        @if (ps.ProjectTasks != null && ps.ProjectTasks.Any())
                        {
                            <table class="table table-sm">
                                <thead>

                                    <tr>
                                        <th>Name</th>
                                        <th>Start</th>
                                        <th>Ende</th>
                                        <th>Dauer (Tage)</th>
                                        <th>Ressourcen</th>
                                        <th>Aktionen</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var task in ps.ProjectTasks)
                                    {
                                        <tr>
                                            <td>@task.ProjectTaskName</td>
                                            <td>@task.StartDate</td>
                                            <td>@task.EndDate</td>
                                            @{
                                                int? dauer = null;
                                                if (task.StartDate.HasValue && task.EndDate.HasValue)
                                                {
                                                    var start = new DateTime(task.StartDate.Value.Year, task.StartDate.Value.Month, task.StartDate.Value.Day);
                                                    var end = new DateTime(task.EndDate.Value.Year, task.EndDate.Value.Month, task.EndDate.Value.Day);
                                                    dauer = (end - start).Days + 1;
                                                }
                                            }
                                            <td>@(dauer.HasValue ? dauer.ToString() : "Nicht verfügbar")</td>
                                            <td>
                                                @* Ressourcen anzeigen *@
                                                @if(task.ProjectTaskRessource != null)
                                                {

                                                }
                                                else
                                                {
                                                    <p>
                                                        Keine Ressource gepflegt
                                                    </p>
                                                }


                                            </td>
                                        @* Ressourcen bearbeiten / Pflegen *@
                                            
                                                @* Ressourcen anzeigen *@
                                            <td>
                                                @{
                                                    bool hasHRG = task.ProjectTaskRessource?.AmountPerHourlyRateGroup?.Any() == true;
                                                    bool hasEmployee = task.ProjectTaskRessource?.EmployeeRessources?.Any() == true;
                                                    bool hasAny = hasHRG || hasEmployee;
                                                    string targetModal = hasHRG ? "addHRGsModal" :
                                                    hasEmployee ? "addRessourceModal" : "choosePlanningModal";
                                                }

                                                <button class="btn btn-sm @(hasAny ? "btn-outline-primary" : "btn-outline-success") open-resource-modal"
                                                        data-bs-target="#@targetModal"
                                                        data-task-id="@task.ProjectTaskId"
                                                        data-bs-toggle="modal">
                                                    <i class="fas @(hasAny ? "fa-pen-to-square" : "fa-plus-circle") me-1"></i>
                                                    @(hasAny ? "Ressourcen ändern" : "Ressourcen pflegen")
                                                </button>
                                            </td>


                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <span>
                                Keine Tasks
                            </span>
                        }
                        @if (ps.SubSections != null && ps.SubSections.Any())
                        {

                            <table class="table table-sm" style="margin-left:20px;">
                                <tbody>
                                    <!-- Hier erzeugst du neue <tr> etc. -->
                                    @{
                                        RenderSections(ps.SubSections, level + 1);
                                    }
                                </tbody>
                            </table>
                        }

                    </td>
                </tr>
            }
        }
    }
    private List<SAAS_Projectplanningtool.Models.Budgetplanning.ProjectTask> GetAllTasks(SAAS_Projectplanningtool.Models.Budgetplanning.ProjectSection section)
    {
        var tasks = new List<SAAS_Projectplanningtool.Models.Budgetplanning.ProjectTask>();
        if (section.ProjectTasks != null)
            tasks.AddRange(section.ProjectTasks);

        if (section.SubSections != null)
        {
            foreach (var sub in section.SubSections)
                tasks.AddRange(GetAllTasks(sub));
        }
        return tasks;
    }
}
<script>
    function toggleRow(rowId, iconElem) {
        var row = document.getElementById(rowId);
        if (!row) return;
        if (row.style.display === "none" || row.style.display === "") {
            row.style.display = "table-row";
            if (iconElem) iconElem.textContent = "−";
        } else {
            row.style.display = "none";
            if (iconElem) iconElem.textContent = "+";
        }
    }
</script>
<script>
    document.querySelectorAll(".open-resource-modal").forEach(btn => {
        btn.addEventListener("click", function (e) {
            const taskId = this.getAttribute("data-task-id");
            const targetModalId = this.getAttribute("data-bs-target");

            // Setze die ProjectTaskId in das richtige Modal
            if (targetModalId === "#addRessourceModal") {
                document.getElementById("employeeProjectTaskId").value =String( taskId);
            } else if (targetModalId === "#addHRGsModal") {
                document.getElementById("hrgProjectTaskId").value = String(taskId);
            }

            const bsModal = new bootstrap.Modal(document.querySelector(targetModalId));
            bsModal.show();
        });
    });

    // Modal-Wechsel-Logik
    document.querySelectorAll(".switch-modal").forEach(btn => {
        btn.addEventListener("click", function () {
            const target = this.getAttribute("data-switch-target");
            const currentModal = bootstrap.Modal.getInstance(this.closest(".modal"));
            const currentTaskId = this.closest(".modal").querySelector('input[name="ProjectTaskId"]')?.value;

            if (currentModal) currentModal.hide();

            if (target === "#addRessourceModal") {
                document.getElementById("employeeProjectTaskId").value = String(currentTaskId);
            } else if (target === "#addHRGsModal") {
                document.getElementById("hrgProjectTaskId").value = String(currentTaskId);
            }

            const newModal = new bootstrap.Modal(document.querySelector(target));
            newModal.show();
        });
    });

    // Auswahl im Choose-Modal
    document.getElementById("chooseRessourceBtn").addEventListener("click", function () {
        const taskId = document.getElementById("choosePlanningModal").getAttribute("data-task-id");
        bootstrap.Modal.getInstance(document.getElementById("choosePlanningModal")).hide();
        document.getElementById("employeeProjectTaskId").value = taskId;
        new bootstrap.Modal(document.getElementById("addRessourceModal")).show();
    });

    document.getElementById("chooseHourlyRateGroupBtn").addEventListener("click", function () {
        const taskId = document.getElementById("choosePlanningModal").getAttribute("data-task-id");
        bootstrap.Modal.getInstance(document.getElementById("choosePlanningModal")).hide();
        document.getElementById("hrgProjectTaskId").value = taskId;
        new bootstrap.Modal(document.getElementById("addHRGsModal")).show();
    });
</script>


