@page
@using SAAS_Projectplanningtool.Models.Budgetplanning
@using System
@using System.Globalization
@model SAAS_Projectplanningtool.Pages.Projects.BudgetPlanningModel

@{
    ViewData["Title"] = "Budgetplanung - " + Model.Project?.ProjectName;
