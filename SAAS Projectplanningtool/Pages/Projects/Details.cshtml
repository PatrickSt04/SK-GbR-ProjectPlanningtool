@page
@using SAAS_Projectplanningtool.Pages.Projects
@model SAAS_Projectplanningtool.Pages.Projects.DetailsModel

@{
    ViewData["Title"] = Model.Project?.ProjectName;
    <link rel="stylesheet" href="~/css/TimeTracking.css" />
}

<div class="project-details-container">
    <!-- Header Section -->
    <div class="project-header">
        <div class="header-content">
            <div class="header-left">
                <h1><i class="fas fa-project-diagram me-2"></i>@Model.Project.ProjectName</h1>
                <div class="project-meta">
                    <span class="creator-info">
                        <i class="fas fa-user me-1"></i>
                        Erstellt von @Model.Project.CreatedByEmployee.EmployeeDisplayName
                    </span>
                    <span class="creation-date">
                        <i class="fas fa-calendar me-1"></i>
                        @Model.Project.CreatedTimestamp?.ToString("dd.MM.yyyy")
                    </span>
                </div>
            </div>
            <div class="header-actions">
                @{
                    bool isArchived = Model.Project.IsArchived == true;
                }
                @if (!isArchived)
                {
                    <form method="post" asp-page-handler="SetProjectArchived" asp-route-id="@Model.Project.ProjectId" style="display:inline;">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-archive me-2"></i>Archivieren
                        </button>
                    </form>
                }
                else
                {
                    <form method="post" asp-page-handler="UndoProjectArchived" asp-route-id="@Model.Project.ProjectId" asp-route-origin="Details" style="display:inline;">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-box-open me-2"></i>Wiederherstellen
                        </button>
                    </form>
                }
                <button type="button" class="btn btn-primary" onclick="showAddSectionModal()">
                    <i class="fas fa-plus me-2"></i>Abschnitt hinzufügen
                </button>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="statistics-section mb-4">
        <div class="row g-3">
            <div class="col-md-3">
                <div class="stat-card stat-tasks">
                    <div class="stat-icon">
                        <i class="fas fa-tasks"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model.CompletetedTasks / @Model.TotalTasks</h3>
                        <p>Aufgaben abgeschlossen</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card stat-progress">
                    <div class="stat-icon">
                        <i class="fas fa-chart-pie"></i>
                    </div>
                    <div class="stat-content">
                        @{
                            double progressPercentage = Model.ProgressInDecimals * 100;
                        }
                        <h3>@((int)progressPercentage)%</h3>
                        <p>Fortschritt</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card stat-timeline">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model.Project.StartDate?.ToString("dd.MM")</h3>
                        <p>Startdatum</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card stat-deadline">
                    <div class="stat-icon">
                        <i class="fas fa-flag-checkered"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model.Project.EndDate?.ToString("dd.MM")</h3>
                        <p>Enddatum</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Two Column Layout -->
    <div class="two-column-layout">
        <!-- Left Column -->
        <div class="left-column">
            <!-- Project Information Section -->
            <section class="project-info-section">
                <div class="card">
                    <div class="card-header">
                        <h2><i class="fas fa-info-circle me-2"></i>Projektinformationen</h2>
                    </div>
                    <div class="card-body">
                        <div class="info-grid">
                            <div class="info-item">
                                <label>Projektleiter</label>
                                <span>@Model.Project.ResponsiblePerson?.EmployeeDisplayName</span>
                            </div>
                            <div class="info-item">
                                <label>Kunde</label>
                                <span>@Model.Project.Customer?.CustomerName</span>
                            </div>
                            <div class="info-item">
                                <label>Status</label>
                                <span class="project-status">@Model.Project.State?.StateName</span>
                            </div>
                            <div class="info-item">
                                <label>Beschreibung</label>
                                <span>@Model.Project.ProjectDescription</span>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Last Modification Section -->
            <section class="modification-section">
                <div class="card">
                    <div class="card-header">
                        <h2><i class="fas fa-history me-2"></i>Letzte Änderung</h2>
                    </div>
                    <div class="card-body">
                        <div class="modification-info">
                            <div class="modifier-details">
                                <div class="modifier-name">
                                    <i class="fas fa-user me-2"></i>
                                    @Model.Project.LatestModifier?.EmployeeDisplayName
                                </div>
                                <div class="modification-time">
                                    <i class="fas fa-clock me-2"></i>
                                    @Model.Project.LatestModificationTimestamp?.ToString("dd.MM.yyyy HH:mm")
                                </div>
                            </div>
                            <div class="modification-text">
                                <i class="fas fa-edit me-2"></i>
                                @Model.Project.LatestModificationText
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <!-- Right Column -->
        <div class="right-column">
            <!-- Tasks Section -->
            <section class="tasks-section">
                <div class="card">
                    <div class="card-body">
                        <!-- Aufgabenkatalog Header -->
                        <div class="task-catalog-header">
                            <h2><i class="fas fa-tasks me-2"></i>Aufgabenkatalog</h2>
                        </div>

                        <!-- Action Buttons -->
                        <div class="task-catalog-actions">
                            @{
                                bool showCompleted = Model.showCompleted;
                            }
                            <form method="get" class="d-inline">
                                <input type="hidden" name="id" value="@Model.Project.ProjectId" />
                                <input type="hidden" asp-for="showCompleted" value="@(!Model.showCompleted)" />
                                <button type="submit" class="btn btn-outline-primary">
                                    <i class="fas @(showCompleted ? "fa-eye-slash" : "fa-eye") me-1"></i>
                                    Abgeschlossene
                                </button>
                            </form>
                            <button type="button" class="btn btn-primary" onclick="showAddTaskCatalogModal()">
                                <i class="fas fa-plus me-1"></i>
                                Aufgabe hinzufügen
                            </button>
                        </div>

                        <!-- Tasks Container -->
                        <div class="tasks-main-container">
                            <!-- Task List -->
                            <div class="task-list-container">
                                <div class="task-list" id="taskList">
                                    @{
                                        var allFilteredTasks = Model.TaskCatalog.Where(task =>
                                        {
                                            bool isCompleted = task.State?.StateName == "Abgeschlossen";
                                            return !isCompleted || showCompleted;
                                        }).ToList();

                                        var visibleTasks = allFilteredTasks.Take(5).ToList();
                                        var hiddenTasksCount = allFilteredTasks.Count() - 5;
                                    }

                                    @foreach (var task in visibleTasks)
                                    {
                                        bool isCompleted = task.State?.StateName == "Abgeschlossen";

                                        <div class="task-item @(isCompleted ? "completed" : "")">
                                            <form method="post" asp-page-handler="ToggleTaskState" class="task-form">
                                                <input type="hidden" name="ProjectTaskId" value="@task.ProjectTaskCatalogTaskId" />
                                                <input type="hidden" name="projectId" value="@Model.Project.ProjectId" />
                                                <input type="hidden" name="StateId" value="@task.StateId" />

                                                <div class="task-checkbox">
                                                    <input class="form-check-input" type="checkbox"
                                                           onchange="this.form.submit();"
                                                           @(isCompleted ? "checked" : "") />
                                                </div>
                                                <div class="task-content">
                                                    <div class="task-name">@task.TaskName</div>
                                                    <div class="task-details">
                                                        <span class="status-badge @(isCompleted ? "completed" : "pending")">
                                                            @task.State?.StateName
                                                        </span>
                                                        @if (task.StartDate.HasValue || task.EndDate.HasValue)
                                                        {
                                                            <span class="task-dates">
                                                                @if (task.StartDate.HasValue)
                                                                {
                                                                    <span>@task.StartDate.Value.ToString("dd.MM")</span>
                                                                }
                                                                @if (task.StartDate.HasValue && task.EndDate.HasValue)
                                                                {
                                                                    <span> - </span>
                                                                }
                                                                @if (task.EndDate.HasValue)
                                                                {
                                                                    <span>@task.EndDate.Value.ToString("dd.MM")</span>
                                                                }
                                                            </span>
                                                        }
                                                    </div>
                                                </div>
                                                <div class="task-actions">
                                                    <button type="button" class="btn btn-sm btn-outline-primary"
                                                            onclick="editTask('@task.ProjectTaskCatalogTaskId', '@task.TaskName', '@(task.StartDate?.ToString("yyyy-MM-dd") ?? "")', '@(task.EndDate?.ToString("yyyy-MM-dd") ?? "")' )">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-outline-danger"
                                                            onclick="deleteItem('@task.ProjectTaskCatalogTaskId', 'taskCatalog', '@task.TaskName')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    }

                                    <!-- Hidden tasks container -->
                                    @if (hiddenTasksCount > 0)
                                    {
                                        <div id="hiddenTasks" style="display: none;">
                                            @foreach (var task in allFilteredTasks.Skip(5))
                                            {
                                                bool isCompleted = task.State?.StateName == "Abgeschlossen";

                                                <div class="task-item @(isCompleted ? "completed" : "")">
                                                    <form method="post" asp-page-handler="ToggleTaskState" class="task-form">
                                                        <input type="hidden" name="ProjectTaskId" value="@task.ProjectTaskCatalogTaskId" />
                                                        <input type="hidden" name="projectId" value="@Model.Project.ProjectId" />
                                                        <input type="hidden" name="StateId" value="@task.StateId" />

                                                        <div class="task-checkbox">
                                                            <input class="form-check-input" type="checkbox"
                                                                   onchange="this.form.submit();"
                                                                   @(isCompleted ? "checked" : "") />
                                                        </div>
                                                        <div class="task-content">
                                                            <div class="task-name">@task.TaskName</div>
                                                            <div class="task-details">
                                                                <span class="status-badge @(isCompleted ? "completed" : "pending")">
                                                                    @task.State?.StateName
                                                                </span>
                                                                @if (task.StartDate.HasValue || task.EndDate.HasValue)
                                                                {
                                                                    <span class="task-dates">
                                                                        @if (task.StartDate.HasValue)
                                                                        {
                                                                            <span>@task.StartDate.Value.ToString("dd.MM")</span>
                                                                        }
                                                                        @if (task.StartDate.HasValue && task.EndDate.HasValue)
                                                                        {
                                                                            <span> - </span>
                                                                        }
                                                                        @if (task.EndDate.HasValue)
                                                                        {
                                                                            <span>@task.EndDate.Value.ToString("dd.MM")</span>
                                                                        }
                                                                    </span>
                                                                }
                                                            </div>
                                                        </div>
                                                        <div class="task-actions">
                                                            <button type="button" class="btn btn-sm btn-outline-primary"
                                                                    onclick="editTask('@task.ProjectTaskCatalogTaskId', '@task.TaskName', '@(task.StartDate?.ToString("yyyy-MM-dd") ?? "")', '@(task.EndDate?.ToString("yyyy-MM-dd") ?? "")')">
                                                                <i class="fas fa-edit"></i>
                                                            </button>
                                                            <button type="button" class="btn btn-sm btn-outline-danger"
                                                                    onclick="deleteItem('@task.ProjectTaskCatalogTaskId', 'task', '@task.TaskName')">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </div>
                                                    </form>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>

                                <!-- Show More Button -->
                                @if (hiddenTasksCount > 0)
                                {
                                    <div class="show-more-container">
                                        <button type="button" class="btn btn-outline-secondary" id="showMoreBtn" onclick="toggleMoreTasks()">
                                            <i class="fas fa-chevron-down me-1"></i>
                                            <span id="showMoreText">@hiddenTasksCount weitere Aufgaben anzeigen</span>
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <!-- Full Width Sections Below -->
    <div class="full-width-sections">
        <!-- Project Structure Section -->
        <section class="structure-section">
            <div class="card">
                <div class="card-header">
                    <h2><i class="fas fa-sitemap me-2"></i>Projektstruktur</h2>
                    <div class="card-actions">
                        <button type="button"
                                class="btn btn-outline-secondary btn-sm @(Model.Project?.ProjectBudget?.InitialBudget == null || Model.Project?.ProjectBudget?.InitialBudget == 0 ? "disabled" : "")"
                                @(Model.Project?.ProjectBudget?.InitialBudget == null || Model.Project?.ProjectBudget?.InitialBudget == 0 ? "disabled" : "")
                                style="@(Model.Project?.ProjectBudget?.InitialBudget == null || Model.Project?.ProjectBudget?.InitialBudget == 0 ? "pointer-events: none;" : "")">
                            @if (Model.Project?.ProjectBudget?.InitialBudget != null && Model.Project?.ProjectBudget?.InitialBudget > 0)
                            {
                                <a asp-page="/Projects/Scheduling" asp-route-id="@Model.Project.ProjectId" class="text-decoration-none">
                                    <i class="fas fa-calendar me-1"></i>Terminplanung
                                </a>
                            }
                            else
                            {
                                <span>
                                    <i class="fas fa-calendar me-1"></i>Terminplanung
                                </span>
                            }
                        </button>
                        <button type="button" class="btn btn-outline-secondary btn-sm">
                            <a asp-page="/Projects/BudgetPlanning" asp-route-id="@Model.Project.ProjectId" class="text-decoration-none">
                                <i class="fas fa-users me-1"></i>Budgetplanung
                            </a>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Project?.ProjectSections != null && Model.Project.ProjectSections.Any())
                    {
                        <div class="project-structure-tree">
                            <!-- Project Root -->
                            <div class="structure-item structure-project">
                                <div class="structure-header">
                                    <div class="structure-toggle">
                                        <i class="fas fa-project-diagram"></i>
                                    </div>
                                    <div class="structure-content">
                                        <span class="structure-name">@Model.Project.ProjectName</span>
                                        <span class="structure-meta">@Model.Project.ProjectSections.Count Section(s)</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Project Sections -->
                            @foreach (var section in Model.Project.ProjectSections.Where(s => s.ParentSectionId == null))
                            {
                                @await Html.PartialAsync("~/Pages/Projects/PartialViews/_ProjectSectionTreeItem.cshtml", section)
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-folder-open fa-3x mb-3 text-muted"></i>
                            <p class="text-muted">Noch keine Projektstruktur vorhanden</p>
                            <button type="button" class="btn btn-primary" onclick="showAddSectionModal()">
                                <i class="fas fa-plus me-2"></i>Ersten Abschnitt hinzufügen
                            </button>
                        </div>
                    }
                </div>
            </div>
        </section>

        <!-- Quick Actions Section -->
        <section class="quick-actions-section">
            <div class="card">
                <div class="card-header">
                    <h2><i class="fas fa-bolt me-2"></i>Schnelle Aktionen</h2>
                </div>
                <div class="card-body">
                    <div class="action-buttons">
                        <button type="button" class="action-btn primary" onclick="showAddSectionModal()">
                            <i class="fas fa-plus"></i>
                            Abschnitt hinzufügen
                        </button>
                        <button type="button" class="action-btn secondary" onclick="showAddTaskModal()">
                            <i class="fas fa-tasks"></i>
                            Aufgabe hinzufügen
                        </button>
                        <button type="button" class="action-btn secondary" onclick="showAddMileStoneModal()">
                            <i class="fas fa-tasks"></i>
                            Meilenstein hinzufügen
                        </button>

                        <a asp-page="Edit" asp-route-id="@Model.Project.ProjectId" class="action-btn secondary">
                            <i class="fas fa-edit"></i>
                            Projekt bearbeiten
                        </a>
                        <a asp-page="Index" class="action-btn secondary">
                            <i class="fas fa-arrow-left"></i>
                            Zurück zur Übersicht
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Zeiterfassung -->
    <div id="timeTracking">
        @await Html.PartialAsync("PartialViews/_TimeTracking")
    </div>

</div>

<!-- Feedback Messages -->
@{
    var message = TempData.GetMessage();
}
@if (message != null)
{
    <div class="alert alert-@message.Type.ToLower() notification-alert" id="feedback-message">
        @message.Message
    </div>
}

<!-- Add Partial Modals for ProjectHandling -->
@await Html.PartialAsync("~/Pages/Projects/Modals/_AddSectionModal.cshtml", (ProjectHandlerPageModel)Model)
@await Html.PartialAsync("~/Pages/Projects/Modals/_EditTaskModal.cshtml", (ProjectHandlerPageModel)Model)
@await Html.PartialAsync("~/Pages/Projects/Modals/_EditTaskCatalogTaskModal.cshtml", (ProjectHandlerPageModel)Model)
@await Html.PartialAsync("~/Pages/Projects/Modals/_AddTaskCatalogModal.cshtml", (ProjectHandlerPageModel)Model, new ViewDataDictionary(ViewData) { { "Context", "TaskCatalog" } })
@await Html.PartialAsync("~/Pages/Projects/Modals/_DeleteConfirmationModal.cshtml", (ProjectHandlerPageModel)Model)
@await Html.PartialAsync("~/Pages/Projects/Modals/_AddSectionMileStone.cshtml", (ProjectHandlerPageModel)Model)

@section Styles {
