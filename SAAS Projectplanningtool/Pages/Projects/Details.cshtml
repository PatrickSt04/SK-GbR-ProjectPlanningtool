            background: #17a2b8;
        }

        .stat-timeline .stat-icon {
            background: #ffc107;
        }

        .stat-deadline .stat-icon {
            background: #dc3545;
        }

        .stat-content h3 {
            font-size: 1.8rem;
            font-weight: bold;
            margin: 0;
            color: #333;
        }

        .stat-content p {
            margin: 0;
            color: #6c757d;
            font-size: 0.9rem;
        }

