@page
@model SAAS_Projectplanningtool.Pages.Settings.HolidayCalendar.DetailsModel
@using SAAS_Projectplanningtool.Models

@{
    ViewData["Title"] = "Feiertagsdetails";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h3 mb-1">@Model.HolidayCalendarEntry.HolidayName</h1>
        <p class="text-muted mb-0">@Model.HolidayCalendarEntry.HolidayDate.ToString("dd.MM.yyyy")</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-page="./Edit" asp-route-id="@Model.HolidayCalendarEntry.HolidayCalendarEntryId" class="btn btn-outline-primary">Bearbeiten</a>
        <a asp-page="./Index" class="btn btn-outline-secondary">Zurück zur Übersicht</a>
    </div>
</div>

<div class="row g-3">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h2 class="h6 card-title">Status</h2>
                @if (Model.HolidayCalendarEntry.DeleteFlag)
                {
                    <span class="badge bg-secondary">Inaktiv</span>
                    <form method="post" asp-page-handler="UndoDeleteFlag" asp-route-id="@Model.HolidayCalendarEntry.HolidayCalendarEntryId" class="mt-3">
                        <button type="submit" class="btn btn-success btn-sm">Aktivieren</button>
                    </form>
                }
                else
                {
                    <span class="badge bg-success">Aktiv</span>
                    <form method="post" asp-page-handler="SetDeleteFlag" asp-route-id="@Model.HolidayCalendarEntry.HolidayCalendarEntryId" class="mt-3">
                        <button type="submit" class="btn btn-danger btn-sm">Deaktivieren</button>
                    </form>
                }
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h2 class="h6 card-title">Eintragsdetails</h2>
                <dl class="row mb-0">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.HolidayCalendarEntry.HolidayName</dd>

                    <dt class="col-sm-4">Datum</dt>
                    <dd class="col-sm-8">@Model.HolidayCalendarEntry.HolidayDate.ToString("dd.MM.yyyy")</dd>

                    <dt class="col-sm-4">Art</dt>
                    <dd class="col-sm-8">@(Model.HolidayCalendarEntry.HolidayType == HolidayEntryType.PublicHoliday ? "Feiertag" : "Betriebsurlaub")</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h2 class="h6 card-title">Erstellt</h2>
                <dl class="row mb-0">
                    <dt class="col-sm-5">Ersteller</dt>
                    <dd class="col-sm-7">@(Model.HolidayCalendarEntry.CreatedByEmployee?.EmployeeDisplayName ?? "Unbekannt")</dd>

                    <dt class="col-sm-5">Zeitpunkt</dt>
                    <dd class="col-sm-7">@(Model.HolidayCalendarEntry.CreatedTimestamp?.ToString("dd.MM.yyyy HH:mm") ?? "Unbekannt")</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h2 class="h6 card-title">Letzte Änderung</h2>
                <dl class="row mb-0">
                    <dt class="col-sm-5">Bearbeiter</dt>
                    <dd class="col-sm-7">@(Model.HolidayCalendarEntry.LatestModifier?.EmployeeDisplayName ?? "Unbekannt")</dd>

                    <dt class="col-sm-5">Zeitpunkt</dt>
                    <dd class="col-sm-7">@(Model.HolidayCalendarEntry.LatestModificationTimestamp?.ToString("dd.MM.yyyy HH:mm") ?? "Unbekannt")</dd>

                    <dt class="col-sm-5">Änderung</dt>
                    <dd class="col-sm-7">@(string.IsNullOrWhiteSpace(Model.HolidayCalendarEntry.LatestModificationText) ? "Keine Angabe" : Model.HolidayCalendarEntry.LatestModificationText)</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
