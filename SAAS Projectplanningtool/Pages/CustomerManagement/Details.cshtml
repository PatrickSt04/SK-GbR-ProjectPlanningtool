@page
@model SAAS_Projectplanningtool.Pages.CustomerManagement.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Customer.CustomerName</h1>
@{
    var creator = Model.Customer.CreatedByEmployee != null
        ? Model.Customer.CreatedByEmployee.EmployeeDisplayName
        : "Unbekannt";
}

<div style="display: flex; justify-content: space-between; align-items: center;">
    <span style="color: grey; font-size: 0.9em;">
        Ersteller: @(Model.Customer.CreatedByEmployee != null ? Model.Customer.CreatedByEmployee.EmployeeDisplayName : "Unbekannt")
        | Erstellt am: @(Model.Customer.CreatedTimestamp.HasValue ? Model.Customer.CreatedTimestamp.Value.ToString("dd.MM.yyyy HH:mm") : "Unbekannt")
    </span>

</div>

<hr />
<div>
    <dl class="row">
        <div class="col-md-2">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Projektstatus</h5>
                    <p class="card-text">
                        @{
                            bool isArchived = Model.Customer.DeleteFlag == true;
                        }
                        @if (!isArchived)
                        {
                            <form method="post" asp-page-handler="SetDeleteFlag" asp-route-id="@Model.Customer.CustomerId" style="display:inline;">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-archive"></i> Sperren
                                </button>
                            </form>
                        }
                        else
                        {
                            <form method="post" asp-page-handler="UndoDeleteFlag" asp-route-id="@Model.Customer.CustomerId" asp-route-origin="Details" style="display:inline;">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-arrow-counterclockwise"></i> Entsperren
                                </button>
                            </form>
                        }
                    </p>
                </div>
            </div>
        </div>

        <!-- Karte 2: Letzte Änderung -->
        @{
            var modifierName = Model.Customer.LatestModifier?.EmployeeDisplayName ?? "Unbekannt";
            var modificationTimestamp = Model.Customer.LatestModificationTimestamp.HasValue
            ? Model.Customer.LatestModificationTimestamp.Value.ToString("dd.MM.yyyy HH:mm")
            : "Nicht verfügbar";
            var modificationText = !string.IsNullOrWhiteSpace(Model.Customer.LatestModificationText)
            ? Model.Customer.LatestModificationText
            : "Keine Angabe";
        }

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Letzte Änderung</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Änderer</dt>
                        <dd class="col-sm-8">
                            @(Model.Customer.LatestModifier != null ? Model.Customer.LatestModifier.EmployeeDisplayName : "Unbekannt")
                        </dd>

                        <dt class="col-sm-4">Zeitpunkt</dt>
                        <dd class="col-sm-8">
                            @(Model.Customer.LatestModificationTimestamp.HasValue ? Model.Customer.LatestModificationTimestamp.Value.ToString("dd.MM.yyyy HH:mm") : "Unbekannt")
                        </dd>
                    </dl>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Änderung</dt>
                        <dd class="col-sm-8">
                            @(string.IsNullOrWhiteSpace(Model.Customer.LatestModificationText) ? "Keine Angabe" : Model.Customer.LatestModificationText)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.CustomerName)
            </dd>

            <h3>Adressdaten</h3>
            <hr />

            @* Adresse einmal vorbereiten *@
            @{
                var address = Model.Customer.Address;
                var country = address?.Country ?? "nicht gepflegt";
                var region = address?.Region ?? "nicht gepflegt";
                var postalCode = address?.PostalCode ?? "nicht gepflegt";
                var city = address?.City ?? "nicht gepflegt";
                var street = address?.Street ?? "nicht gepflegt";
                var houseNumber = address?.HouseNumber ?? "nicht gepflegt";
            }

            <div class="row mb-2">
                <div class="col-sm-6">
                    <strong>Straße / Nr.</strong><br />
                    @street @houseNumber
                </div>
                <div class="col-sm-6">
                    <strong>PLZ / Stadt</strong><br />
                    @postalCode @city
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-sm-6">
                    <strong>Land</strong><br />
                    @country @region
                </div>
            </div>
        </div>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Customer.CustomerId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
