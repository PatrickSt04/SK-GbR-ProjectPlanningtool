@page
@model SAAS_Projectplanningtool.Pages.EmployeeManagement.HourlyRateGroups.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.HourlyRateGroup.HourlyRateGroupName</h1>
<div style="display: flex; justify-content: space-between; align-items: center;">
    <span style="color: grey; font-size: 0.9em;">
        Ersteller: @(Model.HourlyRateGroup.CreatedByEmployee?.EmployeeDisplayName ?? "SK Tools")
        | Erstellt am: @(Model.HourlyRateGroup.CreatedTimestamp?.ToString("dd.MM.yyyy HH:mm") ?? "Datum unbekannt")
    </span>
</div>
<hr />
<div>

    <dl class="row">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Letzte Änderung</h5>
                <dl class="row mb-0">
                    <dt class="col-sm-4">Änderer</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.HourlyRateGroup.LatestModifier.EmployeeDisplayName)</dd>

                    <dt class="col-sm-4">Zeitpunkt</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.HourlyRateGroup.LatestModificationTimestamp)</dd>
                </dl>
                <dl class="row mb-0">
                    <dt class="col-sm-4">Änderung</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.HourlyRateGroup.LatestModificationText)</dd>

                </dl>
            </div>
        </div>
        <dt class="col-sm-2">
            Stundensatz
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HourlyRateGroup.HourlyRate)
        </dd>
        <dt class="col-sm-2">
            Name der Stundensatzgruppe
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HourlyRateGroup.HourlyRateGroupName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.HourlyRateGroup.HourlyRateGroupId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
