    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HourlyRateGroup[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HourlyRateGroup[0].HourlyRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HourlyRateGroup[0].HourlyRateGroupName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HourlyRateGroup[0].LatestModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HourlyRateGroup[0].LatestModificationTimestamp)
