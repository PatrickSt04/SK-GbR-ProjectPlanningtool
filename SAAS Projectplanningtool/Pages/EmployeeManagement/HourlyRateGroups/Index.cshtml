                @Html.DisplayNameFor(model => model.HourlyRateGroup[0].LatestModificationText)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.HourlyRateGroup) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company.CompanyId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourlyRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourlyRateGroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LatestModifier.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LatestModificationTimestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LatestModificationText)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.HourlyRateGroupId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.HourlyRateGroupId">Details</a> |
