@page
@model SAAS_Projectplanningtool.Pages.EmployeeManagement.HourlyRateGroups.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Stundensatzgruppen - Anlage</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HourlyRateGroup.HourlyRateGroupName" class="control-label">Name der Stundensatzgruppe</label>
                <input asp-for="HourlyRateGroup.HourlyRateGroupName" class="form-control" />
                <span asp-validation-for="HourlyRateGroup.HourlyRateGroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HourlyRateGroup.HourlyRate" class="control-label">Stundensatz in €</label>
                <input asp-for="HourlyRateGroup.HourlyRate" class="form-control" />
                <span asp-validation-for="HourlyRateGroup.HourlyRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/EmployeeManagement/Index">Zurück zur Übersicht</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
