@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Mitarbeiterverwaltung</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <h3>Mitarbeiter</h3>
        <a asp-page="./Employees/Create">
            <div class="btn btn-secondary">
                Anlegen
            </div>
        </a>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        EMail
                    </th>
                    <th>
                        Stundensatzgruppe
                    </th>
                    <th>
                        Rolle
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Employee)
                {
                    <tr>
                        <td>
                            <a asp-page="./Employees/Details" asp-route-id="@item.EmployeeId">@Html.DisplayFor(modelItem => item.EmployeeDisplayName)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdentityUser.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HourlyRateGroup.HourlyRateGroupName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdentityRole.Name)
                        </td>
                        <td>
                            @if (item.DeleteFlag)
                            {
                                <span class="badge bg-danger">gesperrt</span>
                            }
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <h3>Stundensatzgruppen</h3>
        <a asp-page="./HourlyRateGroups/Create">
            <div class="btn btn-secondary">
                Anlegen
            </div>
        </a>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Stundensatz in €
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.HourlyRateGroup)
                {
                    <tr>
                        <td>
                            <a asp-page="./HourlyRateGroups/Details" asp-route-id="@item.HourlyRateGroupId">@Html.DisplayFor(modelItem => item.HourlyRateGroupName)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HourlyRate)
                        </td>
                        <td>
                            @if(item.DeleteFlag)
                            {
                                <span class="badge bg-danger">gesperrt</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


