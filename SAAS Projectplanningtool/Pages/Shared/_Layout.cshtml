                margin-right: 12px;
            }

        .nav-submenu {
            list-style: none;
            padding: 0;
            margin: 0;
            background: #34495e;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }

        .nav-item.has-submenu.active .nav-submenu {
            max-height: 300px;
        }

        .nav-submenu .nav-link {
            padding-left: 52px;
            font-size: 0.9rem;
        }

        /* Main Content */
        .main-content {
            margin-left: 250px;
            min-height: 100vh;
            background: #f8f9fa;
            transition: margin-left 0.3s ease;
        }

            .main-content.expanded {
